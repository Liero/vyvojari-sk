@model DevPortal.Web.Models.MessageViewModels.CreateViewModel
@{
    ViewBag.Title = "Nová súkromná správa";
}

<div class="row">
    <div class="col-lg-8">
        <h1 class="main-head">Nová súkromná správa</h1>
        <form asp-action="@nameof(MessageController.Create)" method="post">

            <div class="form-group">
                <label asp-for="@Model.Recipient">Príjemca</label>
                <input asp-for="@Model.Recipient" class="form-control">
                <span asp-validation-for="@Model.Recipient"></span>
            </div>
            <div class="form-group">
                <label for="message">Správa</label>
                <content-editor asp-for="@Model.Content" />
                <span asp-validation-for="@Model.Content"></span>
            </div>

            <partial name="_ReCaptcha" />

            <div class="pt-3">
                <a asp-action="index" class="btn btn-secondary">Zrušiť</a>
                <div class="pull-right">
                    <button asp-action="@nameof(MessageController.Create)" class="btn btn-success" type="submit">Odoslať</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4  p-l-0">
        <div class="panel panel-default">
            <div class="panel-body">

            </div>
        </div>
    </div>
</div>