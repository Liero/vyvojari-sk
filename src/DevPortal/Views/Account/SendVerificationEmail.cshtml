@{
    ViewData["Title"] = "Potvrdenie emailu";
}

<h2>@ViewData["Title"].</h2>
<h4>Zadajte vaše uživateľské meno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="UserName">Username:</label>
                <input name="UserName" class="form-control" value="@ViewData["UserName"]" />
            </div>
            <button type="submit" class="btn btn-primary">Preposlať potvrdzovací email</button>
        </form>
    </div>
</div>