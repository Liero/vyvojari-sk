@model DevPortal.Web.Models.ForumViewModels.IndexPageViewModel

@{
    ViewBag.Title = "Diskusné fórum";
}
@section top{
    <div class="jumbotron-forum shadow">
        <div class="container">
            <div class="pull-left">
                <h1>Diskusné Fórum</h1>
                <p>Miesto pre vaše otázky, návrhy a postrehy.</p>
                <div class="m-t">
                    <a class="btn btn-primary"
                       asp-controller="Forum"
                       asp-action="@nameof(ForumController.NewPost)">
                        Nová Diskusia
                    </a>
                </div>
            </div>

            <div class="pull-right">
                <img src="~/media/forum-icon.png" class="jumbotron-icon" />
            </div>
        </div>
    </div>
}

<div>

</div>

<div class="row">
    <div class="col-md-8">
        <section>
            @foreach (var forumItem in Model.Posts)
            {
                <div class="panel panel-default">
                    <div class="post-author">
                        <a href="#">
                            <img src="@Url.Content(forumItem.Avatar)" alt="...">
                        </a>
                        <a href="#">
                            @forumItem.UserName
                        </a>
                    </div>
                    <div class="post-body">
                        <h3>
                            <a class="h3" asp-action="@nameof(ForumController.Detail)" asp-route-id="@forumItem.Id">
                                @forumItem.Title
                            </a>
                        </h3>
                        <p>@forumItem.Content</p>

                        <div class="m-b">
                            @foreach (var tag in forumItem.Tags)
                            {
                                <span class="label label-default">@tag</span>
                            }
                        </div>
                    </div>
                    <div class="post-stats text-muted b-l">
                        <div class="badge-comments m-a" title="Počet odpovedí">
                            @forumItem.Answers
                        </div>
                        <div class="b-t" style="margin-top:20px; padding:5px">
                            <span class="glyphicon glyphicon-eye-open"></span>
                            @forumItem.Views
                        </div>
                        <div class="b-t" style="padding:5px">
                            <span class="glyphicon glyphicon-time"></span>
                            @Html.DisplayAge(forumItem.LastPost)
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <section>
                    <h2>Najpoužívanejšie tagy</h2>
                    @foreach (var tag in Model.MostUsedTags)
                    {
                        <div><a class="label label-default lg">@tag</a></div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>
