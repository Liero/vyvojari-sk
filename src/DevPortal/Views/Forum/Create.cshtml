@model DevPortal.Web.Models.ForumViewModels.CreateForumThreadViewModel
@{
    ViewBag.Title = "Nový príspevok";
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="@nameof(ForumController.Create)" asp-controller="Forum" method="post">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Nový príspevok
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>Názov</label>
                        <input type="text" class="form-control" aria-label="Definujte názov témy alebo otázku"
                               asp-for="@Model.Title">
                    </div>
                    <div class="form-group">
                        <content-editor asp-for="@Model.Content" />
                    </div>

                    <div class="form-group">
                        <label for="tags">Tagy</label>
                        <tags-editor asp-for="@Model.Tags" />
                    </div>
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-success">Odoslať</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <section>
                    <h2>Najpoužívanejšie tagy</h2>
                    @foreach (var tag in DevPortal.Web.Data.SampleData.Tags)
                    {
                        <div><a class="label label-default lg">@tag</a></div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>

