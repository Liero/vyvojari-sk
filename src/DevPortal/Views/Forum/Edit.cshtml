@using DevPortal.QueryStack.Model
@model DevPortal.Web.Models.ForumViewModels.EditForumThreadViewModel
@{
    ViewBag.Title = "Editovať otázku";
}

<div class="row">
    <div class="col-md-8">
        <h1 class="main-head">Editovať otázku</h1>

        <form asp-action="@nameof(ForumController.EditPost)" method="post">
            <input asp-for="@Model.Id" type="hidden" />

            <div class="form-group">
                <label>Názov</label>
                <input class="form-control" aria-label="What's your programming question? Be specific'"
                       asp-for="@Model.Title">
            </div>
            <div class="form-group">
                <content-editor asp-for="@Model.Content" />
            </div>
            <div class="form-group">
                <label for="tags">Tagy</label>
                <tags-editor asp-for="@Model.Tags" />
            </div>
            <div asp-validation-summary="All"></div>

            <div class="pt-3">
                <a asp-action="index" class="btn btn-secondary">Zrušiť</a>

                <button class="btn btn-success pull-right">Uložiť zmeny</button>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <section>
            <h3 class="main-head light-text">Najpoužívanejšie tagy</h3>
            <vc:most-used-tags entity-type="@typeof(ForumThread)" />
        </section>
    </div>
</div>

