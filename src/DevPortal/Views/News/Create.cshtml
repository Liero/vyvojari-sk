@model DevPortal.Web.Models.NewsViewModels.NewsItemViewModel
@{
    ViewBag.Title = "Pridať správičku";
}
@section top{
    <div class="jumbotron-news shadow">
        <div class="container">
            <div class="pull-left">
                <h1>Správičky</h1>
                <p>Novinky, udalosti, oznámenia...<br />Zdielajte s vývojármi, čo je nové!</p>

            </div>

            <div class="pull-right">
                <img src="~/media/news-icon.png" class="jumbotron-icon" />
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form action="Create" method="post">
            <div class="panel panel-primary">
                <div class="panel-heading">Vytvoriť správičku</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="title">Názov správičky</label>
                        <input asp-for="@Model.Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="message">Správička</label>
                        <vc:editor asp-for="@Model.Content" />
                    </div>
                    <div class="form-group">
                        <label for="tags">Tagy</label>
                        <vc:editor asp-for="@Model.Categories" />
                    </div>
                    
                    
                </div>
                <div class="panel-footer">
                    <div>
                        <button class="btn btn-default" type="button">Zrušiť</button>
                        <div class="btn-group pull-right">

                            <button class="btn btn-default" type="button">Uložiť</button>
                            <button class="btn btn-success" type="button">Publikovať</button>
                        </div>
                    </div>
                </div>
            </div> 
        </form>  
    </div>
    <div class="col-md-4  p-l-0">
        <div class="panel panel-default">
            <div class="panel-body">
                @await Component.InvokeAsync(typeof(ForumOverviewViewComponent))
            </div>
        </div>
    </div>
</div>