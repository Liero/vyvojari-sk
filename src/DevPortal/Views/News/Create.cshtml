@model DevPortal.Web.Models.NewsViewModels.CreateNewsItemViewModel
@{
    ViewBag.Title = "Pridať správičku";
}


<div class="row">
    <div class="col-lg-8">
        <h1 class="main-head">Vytvoriť správičku</h1>
        <form asp-action="@nameof(NewsController.Create)" method="post">

            <div class="form-group">
                <label asp-for="@Model.Title">Názov správičky</label>
                <input asp-for="@Model.Title" class="form-control">
                <span asp-validation-for="@Model.Title"></span>
            </div>
            <div class="form-group">
                <label for="message">Správička</label>
                <content-editor asp-for="@Model.Content" />
                <span asp-validation-for="@Model.Content"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Tags">Tagy</label>
                <tags-editor asp-for="@Model.Tags" />
                <span asp-validation-for="@Model.Tags"></span>
            </div>

            <div class="pt-3">
                <a asp-action="index" class="btn btn-secondary">Zrušiť</a>
                <div class="pull-right">
                    <button asp-action="Create" class="btn btn-success" type="submit">Uložiť</button>
                </div>
            </div>

        </form>
    </div>
    <div class="col-md-4">

        <section>
            <h3 class="main-head light-text">Najpoužívanejšie tagy</h3>
            @foreach (var tag in DevPortal.Web.Data.SampleData.Tags)
            {
                <div><a class="badge badge-secondary">@tag</a></div>
            }
        </section>

    </div>
</div>

