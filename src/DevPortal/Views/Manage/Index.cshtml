@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AvatarUrl">Avatar URL</label>
                <div class="input-group">
                    <input id="tbxAvatar" asp-for="AvatarUrl" class="form-control" />
                    <a id="btnUploadAvatar" class="btn btn-default input-group-addon">Upload</a>
                </div>
                <span asp-validation-for="AvatarUrl" class="text-danger" />
                <img id="imgAvatar" src="@Model.AvatarUrl" />

            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>

        <form id="avatarForm" class="hidden" enctype="multipart/form-data" 
              method="post" asp-controller="Image" asp-action="Upload" asp-route-thumbnail="bigsquare">
            <input id="fileInputAvatar" type="file" name="image" accept="image/*" />
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            var tbxAvatar = document.getElementById('tbxAvatar');
            var imgAvatar = document.getElementById('imgAvatar');
            var fileInputAvatar = document.getElementById('fileInputAvatar');

            /** @@type {HTMLFormElement} */
            var avatarForm = document.getElementById('avatarForm');
            tbxAvatar.onchange = function () {
                imgAvatar.src = tbxAvatar.value;
            };
            $('#btnUploadAvatar').click(function (e) {
                fileInputAvatar.click();
                $.ajax({
                    type: 'POST',
                    url: avatarForm.action,
                    contentType: false,
                    data: new FormData(avatarForm),
                    processData: false,
                    success: function (response) {
                        tbxAvatar.value = response;
                        imgAvatar.src = tbxAvatar.value;
                    }
                });
            });

        })();

    </script>
}
