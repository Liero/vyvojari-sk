@model DevPortal.Web.Models.BlogViewModels.CreateLinkViewModel
@{
    ViewBag.Title = "Pridať odkaz na blog";
}

<div class="row">
    <div class="col-md-8">
        <h1 class="main-head">Vytvoriť odkaz na blog</h1>
        <form asp-action="@nameof(BlogController.CreateLink)" asp-controller="Blog" method="post">

            <div class="form-group">
                <label asp-for="Title">Titulka</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link">URL Adresa</label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Krátky popis</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div>
                <div class="pt-3">
                    <a asp-action="index" class="btn btn-secondary">Zrušiť</a>

                    <div class="pull-right">
                        <button asp-action="Create" class="btn btn-success" type="submit">Uložiť</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
    <div class="col-md-4">
        @await Component.InvokeAsync(typeof(BlogsOverviewViewComponent))
    </div>
</div>